<%- include("header") -%> 
    <div class="box" id="heading">
        <h1><%= listTitle  %> </h1>
    </div>
    <div class="box">
        <% newItems.forEach(function(ele){%>
            <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=ele._id %>" onChange="this.form.submit()">
                <p><%= ele.name  %> </p>
            </div>
            <input type="hidden" name="listName" value=<%=listTitle %> >
            </form>
        <% })%>
    <!-- </div> -->

    
    <form class="item" action="/" method="post">
        <input type="text" name="tasksList" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%=listTitle%>>+</button>
    </form>
    </div>

